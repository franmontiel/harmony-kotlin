<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/transparent"
      android:clickable="true"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/global_tutorial_layout_triangule_left_img"
          android:src="@drawable/as_tutorial_triangle"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="@dimen/span_40"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/global_tutorial_layout_triangule_center_img"
          android:src="@drawable/as_tutorial_triangle"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          />
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/global_tutorial_layout_triangule_right_img"
          android:src="@drawable/as_tutorial_triangle"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:layout_marginRight="@dimen/span_40"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/primary"
          android:padding="@dimen/span_16"
          android:layout_below="@+id/global_tutorial_layout_triangule_left_img"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/span_16"
            android:id="@+id/global_tutorial_layout_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/global_tutorial_layout_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/span_16"
            >

          <Button
              android:layout_width="wrap_content"
              android:layout_height="@dimen/span_40"
              android:layout_alignParentTop="true"
              android:layout_toLeftOf="@+id/global_tutorial_layout_button_two"
              android:layout_toStartOf="@+id/global_tutorial_layout_button_two"
              android:id="@+id/global_tutorial_layout_button_one"
              android:background="@drawable/tutorial_background_button_one"
              android:padding="@dimen/span_8"
              android:textAllCaps="false"
              android:textColor="@color/white"
              />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="@dimen/span_40"
              android:layout_alignParentTop="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:id="@+id/global_tutorial_layout_button_two"
              android:background="@drawable/tutorial_background_button_two"
              android:padding="@dimen/span_8"
              android:layout_marginLeft="@dimen/span_8"
              android:textAllCaps="false"
              android:textColor="@color/white"
              />
            
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="@color/white"
              android:id="@+id/global_tutorial_layout_progress_tv"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_alignBottom="@+id/global_tutorial_layout_button_one"
              android:gravity="center_vertical"
              android:layout_toLeftOf="@+id/global_tutorial_layout_button_one"
              android:layout_toStartOf="@+id/global_tutorial_layout_button_one"
              />

        </RelativeLayout>

      </LinearLayout>

    </RelativeLayout>

  </FrameLayout>

</merge>