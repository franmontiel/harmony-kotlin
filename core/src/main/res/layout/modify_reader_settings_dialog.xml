<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="@dimen/span_16">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/span_8"
    android:paddingTop="@dimen/span_8">

    <com.worldreader.core.application.ui.widget.CheckableImageButton
      android:id="@+id/display_options_dialog_day_profile_button"
      style="@style/Widget.Worldreader.Core.Button.Reader.Day"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minHeight="50dp"
      android:layout_weight="1"
      android:contentDescription="@null"
      android:src="@drawable/ic_reader_a_black_wrapper" />

    <com.worldreader.core.application.ui.widget.CheckableImageButton
      android:id="@+id/display_options_dialog_night_profile_button"
      style="@style/Widget.Worldreader.Core.Button.Reader.Night"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minHeight="50dp"
      android:layout_weight="1"
      android:contentDescription="@null"
      android:src="@drawable/ic_reader_a_white_wrapper" />

    <com.worldreader.core.application.ui.widget.CheckableImageButton
      android:id="@+id/display_options_dialog_cream_profile_button"
      style="@style/Widget.Worldreader.Core.Button.Reader.Cream"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minHeight="50dp"
      android:layout_weight="1"
      android:contentDescription="@null"
      android:src="@drawable/ic_reader_a_sepia_wrapper" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/span_8"
    android:paddingTop="@dimen/span_8">

        <com.worldreader.core.application.ui.widget.discretebar.DiscreteSeekBar
            android:id="@+id/display_options_brightness_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/span_8"
            android:layout_marginRight="@dimen/span_8"
            android:layout_weight="1"
            app:dsb_indicatorColor="@color/primary"
            app:dsb_indicatorPopupEnabled="false"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="@color/primary"
          android:layout_marginEnd="@dimen/span_8"
          android:layout_marginStart="@dimen/span_8" />
    </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/span_8"
    android:paddingTop="@dimen/span_8">

    <ImageView
      android:layout_width="@dimen/span_20"
      android:layout_height="@dimen/span_20"
      android:contentDescription="@null"
      app:srcCompat="@drawable/ic_reader_font_wrapper" />

    <Spinner
      android:id="@+id/display_options_font_family_spinner"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="@dimen/span_8" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/span_8"
    android:paddingTop="@dimen/span_8">

    <ImageView
      android:layout_width="@dimen/span_26"
      android:layout_height="@dimen/span_26"
      app:srcCompat="@drawable/ic_reader_font_size" />

    <Spinner
      android:id="@+id/display_options_font_sizes_spinner"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="@dimen/span_8" />

  </LinearLayout>
</LinearLayout>