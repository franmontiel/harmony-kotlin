<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:showIn="@layout/global_shelve_books_layout">

  <com.worldreader.core.application.ui.widget.BookView
    android:id="@+id/global_shelve_books_layout_book_one"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:layout_marginLeft="@dimen/global_shelve_books_layout_margin_left_right_bottom"
    android:layout_weight="1" />

  <com.worldreader.core.application.ui.widget.BookView
    android:id="@+id/global_shelve_books_layout_book_two"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    android:layout_marginLeft="@dimen/global_shelve_books_layout_margin_left_right_bottom"
    android:layout_marginRight="@dimen/global_shelve_books_layout_margin_left_right_bottom"
    android:layout_weight="1" />

  <com.worldreader.core.application.ui.widget.BookView
    android:id="@+id/global_shelve_books_layout_book_three"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    android:layout_marginRight="@dimen/global_shelve_books_layout_margin_left_right_bottom"
    android:layout_weight="1" />
</merge>
